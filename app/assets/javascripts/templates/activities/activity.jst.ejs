<div class="row detailed-info-item">
  <div class="detailed-info-item-label medium-6 columns">
    <span class="date"><%= happened_at %></span>
  </div>

  <div class="detailed-info-item-value medium-6 columns">
    <%= JST['templates/activities/'+ type]({ data: data, url: url }) %>
    <% if (manually_created_by) { %>
      <div class="detailed-info-comment">
        (manually set by <a href="mailto:<%= manually_created_by.email %>"> <%= manually_created_by.email %></a>)
      </div>
    <% } %>
    <% if (generated_by_sensor) { %>
      <div class="detailed-info-comment">
        (generated by sensor)
      </div>
    <% } %>
  </div>
</div>
