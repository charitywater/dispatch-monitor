%header.row
  %h1.medium-12.columns Forgot your password?

%section.row{ role: 'main' }
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .medium-12.columns= f.error_notification
    .medium-12.columns= f.input :email, required: true, autofocus: true
    .medium-12.columns= f.submit 'Send me reset password instructions', class: 'button radius'

  .medium-12.columns= link_to 'Login', new_account_session_path
