%header.row
  %h1.medium-12.columns Login

%section.row{ role: 'main' }
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .medium-12.columns= f.input :email, required: false, autofocus: true
    .medium-12.columns= f.input :password, required: false
    .medium-12.columns= f.input :remember_me, as: :boolean if devise_mapping.rememberable?

    .medium-12.columns= f.button :submit, "Login", class: 'button radius'

  .medium-12.columns= link_to "Forgot your password?", new_password_path(resource_name)
