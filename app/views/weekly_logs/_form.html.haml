= form_for @weekly_log do |f|
  - if @weekly_log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weekly_log.errors.count, "error")} prohibited this weekly_log from being saved:"
      %ul
        - @weekly_log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :show
    = f.text_field :show
  .field
    = f.label :index
    = f.text_field :index
  .actions
    = f.submit 'Save'
